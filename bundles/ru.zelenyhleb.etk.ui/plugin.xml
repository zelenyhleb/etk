<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="ru.zelenyhleb.etk.ui.commands.category"
            name="%commands.category">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any">
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.pde.ui.templates">
      <template
            class="ru.zelenyhleb.etk.ui.templates.BaseBundleTemplate"
            contributingId="ru.zelenyhleb.etk.ui"
            id="ru.zelenyhleb.etk.ui.templates.base"
            name="%template.base.name">
      </template>
   </extension>
   <extension
         point="org.eclipse.pde.ui.pluginContent">
      <wizard
            class="ru.zelenyhleb.etk.ui.templates.BaseBundleWizard"
            icon="platform:/plugin/org.eclipse.pde.ui/icons/etool16/newpprj_wiz.png"
            id="ru.zelenyhleb.etk.ui.wizard.base"
            java="false"
            name="%template.base.name"
            pureOSGi="false"
            rcp="false"
            requiresActivator="false"
            ui-content="false">
         <description>
            %template.base.description
         </description>
      </wizard>
   </extension>
</plugin>
